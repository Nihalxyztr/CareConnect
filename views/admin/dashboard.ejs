<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Admin Dashboard â€” CareConnect</title>
  <link rel="stylesheet" href="/css/style.css">

  <style>
    body {
      background: #f4f8fb;
    }

    .admin-container {
      padding: 30px 20px;
      max-width: 1200px;
      margin: auto;
    }

    .admin-top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #fff;
      padding: 25px 30px;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      margin-bottom: 30px;
    }

    .dash-title {
      font-size: 1.9rem;
      font-weight: 700;
      color: #0077b6;
    }

    .btn-secondary {
      background: #fff;
      padding: 10px 20px;
      border-radius: 8px;
      border: 2px solid #0077b6;
      color: #0077b6;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn-secondary:hover {
      background: #0077b6;
      color: #fff;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(0, 119, 182, 0.3);
    }

    .admin-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 25px;
    }

    .list-card {
      background: #fff;
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      border: 1px solid #f0f0f0;
      transition: all 0.3s ease;
    }

    .list-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .list-card h3 {
      color: #0077b6;
      margin-bottom: 20px;
      font-size: 1.3rem;
      font-weight: 600;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      padding: 10px 6px;
      border-bottom: 1px solid #e8edf3;
      font-size: 14px;
    }

    th {
      background: #0077b6;
      color: white;
      font-weight: 600;
    }

    .danger {
      background: #dc3545;
      padding: 8px 16px;
      border-radius: 8px;
      color: white;
      border: none;
      cursor: pointer;
      font-weight: 600;
      font-size: 0.9rem;
      transition: all 0.3s ease;
    }

    .danger:hover {
      background: #c82333;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
    }

    @media(max-width:900px) {
      .admin-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>

<body>

  <div class="admin-container">

    <div class="admin-top">
      <h1 class="dash-title">Admin Dashboard</h1>

      <div>
        <span>Logged in as <strong><%= adminEmail %></strong></span>
        <a href="/admin/logout" class="btn-secondary" style="margin-left: 12px;">Logout</a>
      </div>
    </div>

    <div class="admin-grid">

      <!-- DOCTORS LIST -->
      <div class="list-card">
        <h3>Doctors (<%= doctors.length %>)</h3>

        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Speciality</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% doctors.forEach(d => { %>
              <tr>
                <td><%= d.name %></td>
                <td><%= d.specialization %></td>

                <td>
                  <form method="POST" action="/admin/delete-doctor/<%= d._id %>" onsubmit="return confirm('Delete doctor and all related appointments?')" style="display:inline-block;">
                    <button class="danger" type="submit">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- PATIENT LIST -->
      <div class="list-card">
        <h3>Patients (<%= patients.length %>)</h3>

        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% patients.forEach(u => { %>
              <tr>
                <td><%= u.name %></td>
                <td><%= u.email %></td>

                <td>
                  <form method="POST" action="/admin/delete-patient/<%= u._id %>" onsubmit="return confirm('Delete patient and all their appointments?')" style="display:inline-block;">
                    <button class="danger" type="submit">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>

        </table>
      </div>

    </div>

  </div>

</body>
</html>
